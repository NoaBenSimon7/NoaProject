<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <View
        android:id="@+id/view7cart"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:background="#bf8c5e"
        app:layout_constraintBottom_toTopOf="@+id/tvItemName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvItemName"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tvItemPriceCart"
        app:layout_constraintEnd_toStartOf="@+id/btnGoToDetailsCart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view7cart" />

    <TextView
        android:id="@+id/tvItemPriceCart"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="14dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btnGoToDetailsCart"
        app:layout_constraintEnd_toStartOf="@+id/tvItemAmountCart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvItemName" />

    <ImageView
        android:id="@+id/ivItemImageRefCart"


        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="39dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGoToDetailsCart"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGoToDetailsCart"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#d8c6b6"
        android:text="צפייה"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivItemImageRefCart"
        app:layout_constraintStart_toEndOf="@+id/tvItemName"
        app:layout_constraintTop_toBottomOf="@+id/tvItemPriceCart" />

    <TextView
        android:id="@+id/tvItemAmountCart"
        android:layout_width="97dp"
        android:layout_height="25dp"
        android:layout_marginEnd="14dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivItemImageRefCart"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- כפתור הוספה -->

</androidx.constraintlayout.widget.ConstraintLayout>