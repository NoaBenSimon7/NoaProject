<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItem">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="62dp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="118dp" />


    <Spinner
        android:id="@+id/spType"
        android:layout_width="273dp"
        android:layout_height="32dp"
        android:entries="@array/typeArr"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="205dp" />

    <Spinner
        android:id="@+id/spSize"
        android:layout_width="272dp"
        android:layout_height="33dp"
        android:entries="@array/sizeArr"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="256dp" />

    <Spinner
        android:id="@+id/spFabric"
        android:layout_width="273dp"
        android:layout_height="33dp"
        android:entries="@array/fabricArr"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="306dp" />

    <Spinner
        android:id="@+id/spColor"
        android:layout_width="274dp"
        android:layout_height="33dp"
        android:entries="@array/colorArr"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="361dp" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="115dp"

        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/btnAddItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etItemDescription">

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="623dp" />

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="115dp"
        android:layout_weight="1"
        android:orientation="vertical"

        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="494dp">


        <Button
            android:id="@+id/btnGalleryD"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#EADD6F"

            android:gravity="center"
            android:shadowRadius="5"
            android:text="גלריה"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="204dp"
            tools:layout_editor_absoluteY="476dp" />

        <Button
            android:id="@+id/btnTakePicD"
            android:layout_width="170dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:backgroundTint="#EADD6F"

            android:gravity="center"
            android:shadowRadius="5"
            android:text="מצלמה"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="204dp"
            tools:layout_editor_absoluteY="565dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivD"
        android:layout_width="186dp"
        android:layout_height="49dp"
        android:layout_weight="1"

        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="420dp" />
</androidx.constraintlayout.widget.ConstraintLayout>