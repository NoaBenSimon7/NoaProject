<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="400dp">


    <TextView
        android:id="@+id/tvUserValueO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="שם המשתמש / אימייל"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvUserO"
        app:layout_constraintEnd_toStartOf="@+id/tvUserO" />

    <TextView
        android:id="@+id/tvUserO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="משתמש:"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view7" />

    <TextView
        android:id="@+id/tvOrderIdValueO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="4dp"
        android:text="123456"
        app:layout_constraintEnd_toStartOf="@+id/tvOrderIdO"
        app:layout_constraintTop_toBottomOf="@+id/tvTimestampValueO" />


    <TextView
        android:id="@+id/tvTimestampO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="תאריך:"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvTimestampValueO"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvOrderIdO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מספר הזמנה:"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvOrderIdValueO"
        app:layout_constraintEnd_toStartOf="@+id/tvTimestampO"
        app:layout_constraintStart_toStartOf="@+id/tvTimestampO" />

    <TextView
        android:id="@+id/tvTimestampValueO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="2025-05-22 12:34"
        app:layout_constraintEnd_toStartOf="@+id/tvTimestampO"
        app:layout_constraintTop_toBottomOf="@+id/tvUserValueO" />

    <TextView
        android:id="@+id/tvItemsO"
        android:layout_width="179dp"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="7dp"
        android:text="פריטים בהזמנה:"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rcOtrdrItem"
        app:layout_constraintEnd_toStartOf="@+id/tvOrderIdO"
        app:layout_constraintStart_toStartOf="@+id/tvOrderIdO"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderIdO" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcOtrdrItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTotalPriceO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTotalPriceO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:text="מחיר כולל:"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvTotalPriceValueO"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTotalPriceValueO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="16dp"
        android:text="₪99.99"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvTotalPriceO" />

    <TextView
        android:id="@+id/tvStatusO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="16dp"
        android:text="סטטוס:"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvStatusValueO" />

    <TextView
        android:id="@+id/tvStatusValueO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="ממתין למשלוח"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvStatusO"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="23dp"
        android:background="#bf8c5e"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>